---
layout: base
---

<p>
    <a href="../"> &laquo; Back to posts</a>
</p>
<article>
    <h2>{{ title }}</h2>
    <p class="post--time" datetime="{{ post.data.date }}">{{ date | dateFilter }}</p>
    {{ content | safe }}
    <div class="tags--container">
        {% for tag in tags %} 
        {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
            <i class="fa-solid fa-tag"></i><div class="tag">
                <a href="{{ tagUrl | url }}">{{ tag }}</a>
            </div>
            {% endfor %}
    </div>
</article>